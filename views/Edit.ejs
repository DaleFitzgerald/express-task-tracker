<%- include('./layout/Header') %>
<div class="add-to-diary">
    <h1>Edit <span class="green">Diary </span>Entry</h1>
    <form action="/diary/edit/<%= data.id %>?_method=PUT" method="post">

        <input type="hidden" name="_method" value="PUT" />

        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= data.title %>">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" id="tinymce" cols="30" rows="5"><%= data.description %></textarea>
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input type="datetime-local" class="form-control" id="date" name="date" value="">
        </div>
        <input type="submit" value="Update">
        <a class="cancelBtn" href="/diary">Cancel</a>
    </form>
</div>
<%- include('./layout/Footer') %>