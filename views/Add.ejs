<%- include('./layout/Header') %>
<div class="add-to-diary">
    <h1>Add <span class="green">Diary </span>Entry</h1>
    <form action="/add-to-diary" method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Title of work">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" id="" cols="30" rows="5"></textarea>
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input type="datetime-local" class="form-control" id="date" name="date" max="2011-08-15">
        </div>
        <input type="submit" value="Add to Diary">
    </form>
</div>
<%- include('./layout/Footer') %>
